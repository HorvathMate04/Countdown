<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.countdown.HelloController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="dateTimeField" promptText="2025.09.13 15:00:00"/>
        <Button text="Indít" onAction="#startCountdown"/>
    </HBox>

    <Label fx:id="countdownLabel" text="Várakozás..." style="-fx-font-size: 24px;" />
</VBox>


